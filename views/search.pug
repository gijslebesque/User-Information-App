      script.
        var timer = 0
         $("#query").keyup(function(e){ 
           let userInput = $(this).val()
           let timeNow = Date.now()
           if( timeNow - timer > 300) {
            $.post('/searchData', {input: userInput}, function(data, status){
              $( "#query" ).autocomplete({
               source: data
               })
               timer = Date.now()
             })
             }
         }) 
        